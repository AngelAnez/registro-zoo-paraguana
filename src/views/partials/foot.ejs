<article class="toast-container position-fixed bottom-0 end-0 p-3">
  <div
    id="alertInfo"
    class="toast"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
  >
    <section id="alertHeader" class="toast-header text-bg-<%=typeAlert%> user-select-none">
      <img data-lucide="paw-print" class="me-2" alt="alert-icon" />
      <strong class="me-auto">Zoológico Paraguaná</strong>
      <button
        type="button"
        data-bs-dismiss="toast"
        aria-label="Close"
        data-lucide="x"
      ></button>
    </section>
    <section id="alertMessage" class="toast-body user-select-none"><%= messageAlert %></section>
  </div>
</article>


<script src="./public/plugins/bootstrap/js/bootstrap.bundle.min.js" type="text/javascript"></script>

<script src="./public/plugins/lucide/lucide.min.js" type="text/javascript"></script>
<script>
  lucide.createIcons();
</script>

<script>
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
    const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
</script>

<script src="
https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js
"></script>

<script> // Evita que los usuarios puedan retroceder con el navegador
  if (history.forward(1)){
    location.replace(history.forward(1))
  }
</script>

<% if (showAlert) { %>
<script>
  const alertInfo = document.getElementById("alertInfo");
  const alertInfoToast = bootstrap.Toast.getOrCreateInstance(alertInfo);
  alertInfoToast.show();
</script>
<% } %>

</body>
</html>