<article id="addNewVisitStep2" class="d-none col-7 row text-center ps-3 pe-0 m-0 bg-white shadow rounded-end-4">
    <section class="col-12 text-start mt-3 px-2 user-select-none">
        <h3>Pago</h3>
        <p class="m-0">Ingrese los datos de pago.</p>
    </section>

    <section class="row gy-3">
        <label for="totalDolars" class="col-5 d-flex align-items-center ms-2 p-0 gap-3">
            <figure class="m-0 p-0">
                <img class="w-100 user-select-none" src="./public/assets/img/unitedStatesFlag.webp" alt="dolarsImg">
            </figure>
            <div class="col-7 text-start d-flex flex-column gap-2">
                <span class="fw-bold user-select-none">Monto en Dolares</span>
                <input readonly type="text" id="totalDolars" class="form-control p-0 text-center" name="totalDolars"/>
            </div>
        </label>
    
        <label for="totalBolivars" class="offset-1 col-5 d-flex align-items-center p-0 gap-3">
            <figure class="m-0 p-0">
                <img class="w-100 user-select-none" src="./public/assets/img/venezuelaFlag.webp" alt="bolivarsImg">
            </figure>
            <div class="col-7 text-start d-flex flex-column gap-2">
                <span class="fw-bold user-select-none">Monto en Bolívares</span>
                <input readonly type="text" id="totalBolivars" class="form-control p-0 text-center" name="totalBolivars"/>
            </div>
        </label>
    </section>

    <section class="row gy-3">
        <label for="paymentMethod" class="col-5 d-flex align-items-center ms-2 p-0 gap-3">
            <figure class="m-0 p-0">
                <img class="w-100 user-select-none" src="./public/assets/img/paymentMethod.webp" alt="paymentMethodImg">
            </figure>
            <div class="col-7 text-start d-flex flex-column gap-2">
                <span class="fw-bold user-select-none">Método de Pago</span>
                <select name="paymentMethod" id="paymentMethod" class="form-select py-0 ps-2" onchange="dinamicPaymentMethod()">
                    <option selected disabled></option>
                    <option>Transferencia</option>
                    <option>Pago Móvil</option>
                    <option>Efectivo</option>
                    <option>Otro</option>
                </select>
            </div>
        </label>
    
        <label id="methodSelected" class="offset-1 col-5 d-flex align-items-center p-0 gap-3 justify-content-end">
        </label>
    </section>

    <section class="row text-center mt-5 mb-4 d-flex justify-content-center align-items-center gap-4">
        <button type="button" onclick="changeStep(1)" class="btn btn-secondary col-2 p-1">Atrás</button>
        <button type="button" onclick="validateStep2()" class="btn btn-success col-2 p-1">Siguiente</button>
    </section>
</article>