  >
    <section class="text-bg-light rounded-2 shadow w-25">
      <form
        class="row g-0 py-2 has-validation"
        method="post"
        action="/registro"
      >
        <h4 class="offset-1 col-10 px-0 py-2 user-select-none">
          Registrar Usuario
        </h4>
