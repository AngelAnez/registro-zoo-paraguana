<%- include('partials/head', {title : "Registro", css : "login-registro.css",
js: "login.js", header: false}); %>
<body
  style="
    background-image: url(../public/assets/img/zoo-entry.jpeg);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  "
  class="vh-100"
>
  <main
    class="h-100 w-100 d-flex align-items-center justify-content-center"
    style="background-color: rgba(0, 0, 0, 0.315)"
  >
    <section class="text-bg-light rounded-2 shadow w-100 mx-3" style="min-width: 200px; max-width: 400px">
      <form
        class="row g-0 py-2 has-validation"
        method="post"
        action="/registro"
      >
        <h4 class="offset-1 col-10 px-0 py-2 user-select-none">
          Registrar Usuario
        </h4>
        <section class="offset-1 col-10 px-0 py-2">
          <label for="usernameRegistro" class="form-label user-select-none"
            >Nombre de Usuario</label
          >
          <input
            type="text"
            class="form-control w-100 <% if (invalidUser) { %> is-invalid <% } %>"
            id="usernameRegistro"
            name="username"
            required
            autocomplete="off"
            oninput="resetValidators('Registro')"
          />
        </section>
        <section class="offset-1 col-10 px-0 py-2">
          <label for="passwordRegistro" class="form-label user-select-none"
            >Contraseña</label
          >
          <div
            class="d-flex align-items-center justify-content-between position-relative"
          >
            <input
              type="password"
              class="form-control w-100 pe-5 <% if (invalidUser) { %> is-invalid <% } %>"
              id="passwordRegistro"
              name="password"
              required
              autocomplete="off"
              oninput="resetValidators('Registro')"
            />
            <i
              data-lucide="eye"
              class="passwordIconContainer position-absolute end-0 mx-3 <% if (invalidUser) { %> visually-hidden <% } %>"
              id="passwordHideIcon"
              onclick="hidePassword('passwordRegistro')"
            ></i>
          </div>
        </section>
        <section class="offset-1 col-10 px-0 py-2">
          <label for="emailRegistro" class="form-label user-select-none"
            >Correo Electrónico</label
          >
          <input
            type="email"
            class="form-control w-100 <% if (invalidUser) { %> is-invalid <% } %>"
            id="emailRegistro"
            name="email"
            required
            autocomplete="off"
            oninput="resetValidators('Registro')"
          />
          <section
          id="invalidUserText"
          class="<% if (invalidUser) { %> is-invalid <% } %>"
          aria-describedby="validationLoginFeedback"
          ></section>
          <section
          id="validationLoginFeedback"
          class="invalid-feedback user-select-none"
          >
            <%= message %>
          </section>
        </section>

        <section class="offset-1 col-10 px-0 py-2">
          <button class="btn btn-success" type="submit">Registrarse</button>
        </section>
        <section class="offset-1 col-10 px-0 py-2">
          <p class="user-select-none">
            ¿Ya tienes una cuenta? <a href="/login">Inicia Sesión</a>
          </p>
        </section>
      </form>
    </section>
  </main>
  <%- include('partials/scripts',)%> <%- include('partials/foot'); %>
</body>
