<%- include('../../layout-head', {title : "Registrar Visitantes", css :
"new-visit.css", js : "newVisit.js"}); %>

<section class="new-visit-section">
  <form id="addNewVisit" class="new-visit-form" method="post">
    <!-- Evita que se envíe el Formulario con ENTER -->
    <button
      type="submit"
      disabled
      style="display: none"
      aria-hidden="true"
    ></button>

    <!-- Pasos -->
    <%- include('partials/form-steps'); %>

    <!-- Paso 1: Cantidad de Visitantes -->
    <%- include('partials/form-visits.ejs')%>

    <!-- Paso 2: Datos de Pago -->
    <%- include('partials/form-payment.ejs')%>

    <!-- Paso 3: Datos del Representante -->
    <%- include('partials/form-representative.ejs')%>

    <!-- Paso 4: Confirmación -->
    <%- include('partials/form-confirmation.ejs')%>
  </form>
</section>

<%- include('../../layout-foot', {messageAlert, typeAlert, showAlert}) %>
