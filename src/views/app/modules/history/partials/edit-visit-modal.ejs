<article
  class="modal fade"
  id="editVisitModal"
  tabindex="-1"
  aria-hidden="true"
  data-bs-backdrop="static"
>
  <form method="post" class="modal-dialog modal-lg">
    <section class="modal-content">
      <header class="modal-header text-bg-success user-select-none">
        <h1 class="modal-title fs-5">Información de la Visita</h1>
        <a
          class="btn text-light p-0 opacity-hover"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <i data-lucide="x" alt="close-icon"></i>
        </a>
        <input type="number" name="_id" class="visually-hidden" />
        <input type="number" name="kids_id" class="visually-hidden" />
        <input type="number" name="adults_id" class="visually-hidden" />
        <input type="number" name="elders_id" class="visually-hidden" />
      </header>
      <section class="modal-body d-flex flex-wrap">
        <ul class="modal-list">
          <%- include('edit-visit-list-element', {title: "Fecha", name: "date",
          readonly: true});%> <%- include('edit-visit-list-element', {title:
          "Hora", name: "time", readonly: true});%>
        </ul>

        <div>
          <header class="d-flex gap-2 align-items-center">
            <img
              class="modal-list-icon"
              src="./public/assets/img/children.webp"
              alt="Icono para los Niños"
            />
            <h2 class="modal-list-title">Niños</h2>
          </header>
          <ul class="modal-list">
            <%- include('edit-visit-list-element', {title: "Niños", name:
            "boys", readonly: false});%> <%- include('edit-visit-list-element',
            {title: "Niñas", name: "girls", readonly: false});%>
          </ul>
        </div>

        <div>
          <header class="d-flex gap-2 align-items-center">
            <img
              class="modal-list-icon"
              src="./public/assets/img/adults.webp"
              alt="Icono para los Adultos"
            />
            <h2 class="modal-list-title">Adultos</h2>
          </header>
          <ul class="modal-list">
            <%- include('edit-visit-list-element', {title: "Hombres", name:
            "men", readonly: false});%> <%- include('edit-visit-list-element',
            {title: "Mujeres", name: "women", readonly: false});%>
          </ul>
        </div>

        <div>
          <header class="d-flex gap-2 align-items-center">
            <img
              class="modal-list-icon"
              src="./public/assets/img/seniors.webp"
              alt="Icono para los Adultos Mayores"
            />
            <h2 class="modal-list-title">Adultos Mayores</h2>
          </header>
          <ul class="modal-list">
            <%- include('edit-visit-list-element', {title: "Hombres", name:
            "elderMen", readonly: false});%> <%-
            include('edit-visit-list-element', {title: "Mujeres", name:
            "elderWomen", readonly: false});%>
          </ul>
        </div>

        <div>
          <header class="d-flex gap-2 align-items-center">
            <img
              class="modal-list-icon"
              src="./public/assets/img/gift.png"
              alt="Icono para las entradas de cortesía"
            />
            <h2 class="modal-list-title">Entradas de Cortesía</h2>
          </header>
          <ul class="modal-list">
            <%- include('edit-visit-list-element', {title: "Niños", name:
            "courtesyKids", readonly: false});%> <%-
            include('edit-visit-list-element', {title: "Adultos", name:
            "courtesyAdults", readonly: false});%>
          </ul>
        </div>
      </section>
      <footer
        class="modal-footer container-fluid p-0 d-flex align-items-start m-0 user-select-none"
      >
        <div class="row p-0 m-0 w-100">
          <section
            class="col-8 d-flex flex-column m-0 py-2 px-3 text-justify text-bg-secondary gap-2"
            style="border-bottom-left-radius: 0.375rem"
          >
            <div id="methodVisitValue" class="d-flex gap-2"></div>
            <div
              id="methodValidationVisitValue"
              class="d-flex flex-column"
            ></div>
          </section>
          <section
            class="col-4 d-flex flex-column text-bg-success m-0 py-2 px-3 rounded-bottom-2 rounded-start-0"
          >
            <section class="d-flex flex-column gap-1">
              <p class="text-start w-100 m-0 fw-bold">Total:</p>
              <div
                id="totalBolivarsVisitValue"
                class="w-100 d-flex fs-5 fw-semibold gap-2"
              ></div>
              <div
                id="totalDolarsVisitValue"
                class="w-100 d-flex fs-5 fw-semibold gap-2"
              ></div>
            </section>
          </section>
        </div>
      </footer>
    </section>
  </form>
</article>
